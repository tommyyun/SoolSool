<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="매칭된 방"
        android:textSize="25dp"
        android:textColor="#000000"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp">


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tab2_sample_room"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="top|center"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f4e06c"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/room_type"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f4e06c"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/profile_view">

                    <ImageView
                        android:id="@+id/is_leader"
                        android:layout_width="60dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/room_loc"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight = "15dp"
                        android:text="익선동(서울)"
                        android:textSize="40dp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/room_date"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight = "15dp"
                        android:text="7월 / 14일"
                        android:textSize="40dp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/room_time"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:text="7월 / 14일"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/room_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight = "15dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:textSize="30dp"
                        android:textColor= "#000000"
                        android:text="개발자 분들 이야기해요~~" />

                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">


                        <TextView
                            android:id="@+id/room_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="연애금지  연애금지  연애금지  연애금지  연애금지  연애금지  연애금지  연애금지  연애금지  연애금지  연애금지. 혼난다 진짜."
                            android:textColor="#000000"
                            android:textSize="20dp" />

                    </ScrollView>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#BBFFFFFF"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="로그인이&#10;필요합니다."
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="45dp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="20dp"
                    android:rotation="-45"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tab2_matched_rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>

    </FrameLayout>


</LinearLayout>